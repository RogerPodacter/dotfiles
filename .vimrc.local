:set incsearch
:set softtabstop=2 shiftwidth=2
:set autoindent
:colorscheme candycode
:set tabstop=2
:set binary
:set expandtab

set wildignore+=*/tmp/*,*.so,*.swp,*.zip
let g:ctrlp_map = '<c-p>'
let g:ctrlp_cmd = 'CtrlP'
let g:ctrlp_custom_ignore = {
  \ 'dir': '\v[\/]\.(git|hg|svn)$|node_modules',
  \ 'file': '\v\.(exe|so|dll|DS_Store)$',
  \ }
